@model Book
@{
    ViewBag.Title = "Edit Book";
    Layout = "_AdminLayout";
}
<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="BookId" />
    <div class="form-group">
        <label asp-for="Title"></label>
        <div><span asp-validation-for="Title" class="text-danger"></span></div>
        <input asp-for="Title" class="form-control" />
    </div>
    <div class="form-group">    
        <label asp-for="ISBN"></label>
        <div><span asp-validation-for="ISBN" class="text-danger"></span></div>
        <input asp-for="ISBN" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="NroPages"></label>
        <div><span asp-validation-for="NroPages" class="text-danger"></span></div>
        <input asp-for="NroPages" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Author"></label>
        <div><span asp-validation-for="Author" class="text-danger"></span></div>
        <input asp-for="Author" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Category"></label>
        <div><span asp-validation-for="Category" class="text-danger"></span></div>
        <select class="form-control" asp-for="Category">
            <option value="Technology">Technology</option>
            <option value="Education">Education</option>
            <option value="Engineering">Engineering</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="Price"></label>
        <div><span asp-validation-for="Price" class="text-danger"></span></div>
        <input asp-for="Price" class="form-control" />
    </div>
    <div class="text-center">
        <button class="btn btn-primary" type="submit">Save</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>

